
@{
    ViewBag.Title = "Main";
    Layout = null;
}

<link href="~/Plugins/layui/css/layui.css" rel="stylesheet" />
<script src="~/Plugins/layui/layui.js"></script>
<div class="layui-tab" lay-filter="test">
    <ul class="layui-tab-title">
        <li class="layui-this" lay-id="11">用户列表1</li>
        <li lay-id="22">用户列表2</li>

    </ul>
    <div class="layui-tab-content">
        <div id="c1" class="layui-tab-item layui-show">
            @{
                Html.RenderAction("Index", "Mall");
            }
        </div>
        <div id="c2" class="layui-tab-item">用户列表2</div>
    </div>
</div>
<script>

    layui.use('element', function () {
        var element = layui.element();
        var $ = layui.$;
        element.on('tab(test)', function (data) {
            if (data.index == 0) {
                $.get('/Mall/Index', function (html) {
                    $("#c2").empty();
                    $(".layui-show").append(html);
                })
            }
            //element.render('tab');
            if (data.index == 1) {
                $.get('/Mall/Index', function (html) {
                    $("#c1").empty();
                    $(".layui-show").append(html);
                })
            }
        });

    });
</script>

